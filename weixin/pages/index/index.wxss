}

.index .icon-zanwushuju {
  font-size: 240rpx;
  color: #9e9e9e;
}


/* 修改轮播图样式 */

.index .swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}

.index .swiper-box .wx-swiper-dot {
  width: 24rpx;
  display: inline-flex;
  height: 3rpx;
  margin-left: 15rpx;
  justify-content: space-between;
}

.index .swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #cccccc;
  border-radius: 8rpx
}

.index .swiper-box .wx-swiper-dot-active::before {
  background: #4990e2;
}
