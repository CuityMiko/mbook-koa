/* layout3: 栏目布局3 */

.index .layout3 .book-item {
  flex: 0 0 33.3333%;
  display: inline-block;
  width: 33.33%;
}

.index .layout3 .book-item .book-img {
  display: block;
  width: 210rpx;
  height: 270rpx;
  background-color: #dddddd;  
}

