.ths-toast{
  text-align: center;
  position: fixed;
  width: 100%;
  z-index: 999;
}
.toast-container{
  display: inline-block;
}
.toast-txt{
  background: #3A3A3A;
  border-radius: 6rpx;
  font-size: 30rpx;
  padding: 24rpx 48rpx;
  color: #eeeeee;
  font-family: "PingFang SC", "Hiragino Sans GB", Helvetica, STHeiTi, sans-serif !important;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
  opacity: 0;
}
.position-center{
  top:50%;
  transform: translate(0,-50%);
  -webkit-transform: translate(0,-50%);
}
.position-bottom{
  bottom:15%;
}