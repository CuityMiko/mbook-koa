extends layout
block link
  link(rel='stylesheet', type='text/css', href='/activities/share/styles/index.css')
block head_script
  script.
    /* 自适应字体, 设置初始字体：root em */
    function autoFontSize() {
      var font_size = document.documentElement.clientWidth / 640.0 * 100;
      font_size = font_size >= 50 ? font_size : 50;
      var html = document.getElementsByTagName('html')[0];
      html.style.fontSize = font_size + 'px';
    }
    window.onresize = function () {
      autoFontSize()
    };
    autoFontSize();
block content
  //- img.pre-load(src='/activities/001/images/sprite.png', alt='')
